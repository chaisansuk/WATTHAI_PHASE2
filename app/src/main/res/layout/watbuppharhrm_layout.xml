<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".indexactivity.page.phaaramluang.WatbuppharhrmActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#d2be85" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="WATTHAI"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_backspace_orange_50_18dp"
            android:background="#d2be85"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/detail18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                        <WebView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/webViewn18"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
            </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/map18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/map">

                <ImageButton
                    android:id="@+id/btn_watbuppharhrmmap"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_menu_mylocation"
                    android:alpha="0.7"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/btn_watbuppharhrmmaplocation"/>

                <ImageButton
                    android:id="@+id/btn_watbuppharhrmmaplocation"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="95dp"
                    android:src="@drawable/ic_menu_directions"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ตรวจสอบพิกัด"
                    android:id="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ออกเดินทาง"
                    android:id="@+id/textView6"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/news18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/map">
                <ImageButton
                    android:id="@+id/btn_watbuppharhrmnews"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/news1"
                    android:alpha="0.7"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView00"
                    android:layout_alignStart="@+id/btn_watbuppharhrmnewswat"/>

                <ImageButton
                    android:id="@+id/btn_watbuppharhrmnewswat"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="95dp"
                    android:src="@drawable/news1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ข่าวสารทั่วไปทางพุทธศาสนา"
                    android:id="@+id/textView00"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ข่าวสารจากทางวัด"
                    android:id="@+id/textView11"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>
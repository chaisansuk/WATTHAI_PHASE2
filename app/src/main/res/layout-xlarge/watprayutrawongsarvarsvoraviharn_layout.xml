<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".indexactivity.page.phaaramluang.WatprayutrawongsarvarsvoraviharnActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#d2be85" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="WATTHAI"
            android:textColor="@color/black"
            android:textSize="60dp"
            android:textStyle="bold"
            android:typeface="serif" />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_backspace_orange_50_18dp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/detail19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                        <WebView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/webViewn19"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
            </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/map19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/map">

                <ImageButton
                    android:id="@+id/btn_watprayutrawongsarvarsvoraviharnmap"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/ic_menu_mylocation"
                    android:alpha="0.7"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/btn_watprayutrawongsarvarsvoraviharnmaplocation"/>

                <ImageButton
                    android:id="@+id/btn_watprayutrawongsarvarsvoraviharnmaplocation"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginBottom="220dp"
                    android:src="@drawable/ic_menu_directions"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ตรวจสอบพิกัด"
                    android:id="@+id/textView5"
                    android:textSize="@dimen/h1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="150dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ออกเดินทาง"
                    android:id="@+id/textView6"
                    android:textSize="@dimen/h1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>

</TabHost>